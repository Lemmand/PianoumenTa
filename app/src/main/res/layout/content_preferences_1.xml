        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/chk_20s"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
