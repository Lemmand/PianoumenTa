        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Paphos"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="#fff"
        android:paddingBottom="10dp"
